{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/nsuz0003/FIT3179-Assignment-2/main/data/government_spending.csv"
  },
  "params": [
    {
      "name": "year_select",
      "value": 1990,
      "bind": {
        "input": "range",
        "min": 1970,
        "max": 2010,
        "step": 5,
        "name": "Year"
      }
    }
  ],
  "config": {
    "concat": {
      "spacing": 20
    }
  },
  "hconcat": [
    {
      "title": "Share of the population with tertiary education (above 14 year)",
      "width": 800,
      "height": 400,
      "projection": {
        "type": "equirectangular"
      },
      "layer": [
        {
          "data": {
            "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
            "format": {
              "type": "topojson",
              "feature": "ne_110m_admin_0_countries"
            }
          },
          "mark": {
            "type": "geoshape",
            "fill": "lightgray",
            "stroke": "White",
            "tooltip": {
              "signal": "datum.properties.NAME + ': no data'"
            }
          },
          "encoding": {},
          "params": [
            {
              "name": "country_select",
              "value": {
                "Code": "AUS"
              },
              "select": {
                "type": "point",
                "fields": [
                  "Code"
                ]
              }
            }
          ]
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/nsuz0003/Week-9-HW/main/data/tertiary_data_raw.csv"
          },
          "transform": [
            {
              "filter": "datum.Year == year_select"
            },
            {
              "lookup": "Code",
              "from": {
                "data": {
                  "url": "https://raw.githubusercontent.com/KaneSec/vega_lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
                  "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                  }
                },
                "key": "properties.GU_A3"
              },
              "as": "geo"
            }
          ],
          "mark": {
            "type": "geoshape",
            "stroke": "White"
          },
          "encoding": {
            "shape": {
              "field": "geo",
              "type": "geojson"
            },
            "color": {
              "field": "Percentage",
              "type": "quantitative",
              "scale": {
                "type": "threshold",
                "domain": [
                  5,
                  10,
                  15,
                  20
                ],
                "scheme": "blues"
              },
              "legend": {
                "orient": "left"
              }
            },
            "tooltip": [
              {
                "field": "Country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "Percentage",
                "type": "quantitative"
              },
              {
                "field": "Year",
                "type": "nominal"
              }
            ]
          }
        },
        {
          "data": {
            "url": "https://raw.githubusercontent.com/nsuz0003/Week-9-HW/main/data/tertiary_data_raw.csv"
          },
          "transform": [
            {
              "filter": "datum.Year == year_select"
            },
            {
              "calculate": "parseFloat(datum.Percentage)",
              "as": "float"
            },
            {
              "window": [
                {
                  "op": "rank",
                  "as": "ranking"
                }
              ],
              "sort": [
                {
                  "field": "float",
                  "order": "descending"
                }
              ]
            },
            {
              "filter": "datum.ranking == 1"
            },
            {
              "calculate": "'Country with most people who completed Tertiary education: ' + datum.Country",
              "as": "text"
            },
            {
              "calculate": "-180",
              "as": "x"
            },
            {
              "calculate": "-90",
              "as": "y"
            }
            
          ],
          "mark": {
            "type": "text",
            "align": "left",
            "dy": -5
          },
          "encoding": {
            
            "longitude": {
          "field": "x",
          "type": "quantitative"
        },
        "latitude": {
          "field": "y",
          "type": "quantitative"
        },
            "text": {
              "field": "text"
            }
          }
        }
      ]
    },
    {
      "height": 400,
      "width": 450,
      "transform": [
        {
          "filter": "datum.Code == country_select.Code"
        },
        {
          "filter": "datum.Value != null"
        },
        {
          "calculate": "datum.Code + 'Government expenditure on education'",
          "as": "title"
        }
      ],
      "title": {"text": {"expr": "country_select.Code + ': Government expenditure on Tertiary education'"}},
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "Year",
          "type": "nominal",
          "title": "Year"
        },
        "y": {
          "field": "Value",
          "type": "quantitative",
          "title": "% of government expenditure on education"
        },
        "color": {
          "value": "Green"
        }
      }
    }
  ]
}
